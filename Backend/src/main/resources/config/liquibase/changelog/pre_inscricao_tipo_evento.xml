<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="1" author="rennan.aguiar">
        <createTable tableName="pre_inscricao">
            <column name="id_pre" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="cod_verificacao" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="verificado" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="id_usuario" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="id_evento" type="number">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="pre_inscricao" columnNames="id_pre" constraintName="pk_pre_inscricao"/>

        <addForeignKeyConstraint baseTableName="pre_inscricao" baseColumnNames="id_usuario"
                                 constraintName="fk_id_usuario" referencedTableName="usuario"
                                 referencedColumnNames="usuario_id"/>
        <addForeignKeyConstraint baseTableName="pre_inscricao" baseColumnNames="id_evento"
                                 constraintName="fk_id_evento" referencedTableName="evento"
                                 referencedColumnNames="evento_id"/>
    </changeSet>

    <changeSet id="2" author="rennan.aguiar">
        <createTable tableName="tipo_evento">
            <column name="tipo_id" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="tipo_evento" columnNames="tipo_id" constraintName="pk_tipo_evento"/>

        <insert tableName="tipo_id">
            <column name="id">1</column>
            <column name="descricao">Workshop</column>
        </insert>

        <insert tableName="tipo_id">
            <column name="id">2</column>
            <column name="descricao">Palestra</column>
        </insert>

        <insert tableName="tipo_id">
            <column name="id">3</column>
            <column name="descricao">Mini Curso</column>
        </insert>

        <insert tableName="tipo_id">
            <column name="id">4</column>
            <column name="descricao">Treinamento</column>
        </insert>
    </changeSet>

</databaseChangeLog>
